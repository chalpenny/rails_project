<h4>Enter Client Info:</h4>
<%= form_for @client do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
    <p>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </p>
    <p>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </p>
    <p>
        <%= f.label :neighborhood %>
        <%= f.text_field :neighborhood %>
    </p>
    <p>
        <%= f.label "Fee Per Appointment" %>
        <%= f.text_field :base_fee %>
    </p>
    <p>
        <%= f.label "Client Notes" %>
        <%= f.text_area :client_notes %>
    </p>
    <h4>Enter Pet Info:</h4>
    <fieldset>
        <%= f.fields_for :pets do |pet| %>
            <%= pet.label :name %>
            <%= pet.text_field :name %>
            <br>
            <%= pet.label :description %>
            <%= pet.text_area :description %>
            <br>
        <% end %>
    </fieldset>
    <br>
    <br>
    <%= f.submit %>
<% end %>

<% if @client.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h3>
 
    <ul>
    <% @client.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

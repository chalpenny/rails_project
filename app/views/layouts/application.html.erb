<!DOCTYPE html>
<html>
  <head>
  <style>

    </style>

    <title>RailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  
  <body>
    <nav>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      
        <% if !user_signed_in? %>
          <%= link_to "Sign In", new_user_session_path %> | <%= link_to "Sign Up", new_user_registration_path %>
        <% else %>
        Hello, <%= "#{current_user.email}" %>
        <div align="right">
          <%= button_to "Log Out", destroy_user_session_path, { method: 'delete'} %>
        </div>
        <%= link_to 'Upcoming Appointments', appointments_path %> |
        <%= link_to 'Clients List', clients_path %> | 
        <%= link_to 'Add Client', new_client_path %>
        <br>
        <br>
          <hr>
        <% end %>
      </nav>

    <%= yield %>
 
    </body>
</html>
